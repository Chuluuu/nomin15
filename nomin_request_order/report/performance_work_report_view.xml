<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


    <record id="form_performance_work_report_view" model="ir.ui.view">
        <field name="name">Гүйцэтгэсэн ажлын тайлан</field>
        <field name="model">performance.work.report</field>
        <field name="arch" type="xml">
            <form string="Гүйцэтгэсэн ажлын тайлан">
                <group>                   
                    <group>
                            <field name="date_from"  required="1"/>
                            <field name="type" required="1"/>
                    </group>
                    <group>
                            <field name="date_to" required="1" />
                            <field name="report_type" required="1"/>
                            <field name="job_ids" widget="many2many_tags"  options="{'no_create': True}" attrs="{'invisible':[('report_type','!=','summary_report')]}"/>
                            <field name="request_config_id" options="{'no_create': True}" invisible="1"/>
                    </group>                  
                </group>
                <notebook>
                    <page string="Захиалгч хэлтэс" attrs="{'invisible':[('type','=','employee')]}" >
                            <field name="sector_ids"  widget="many2many_tags" options="{'no_create': True}"  />
                    </page>   
                    <page string="Гүйцэтгэгч хэлтэс" attrs="{'invisible':[('type','=','employee')]}" >
                            <field name="perform_department_ids"  widget="many2many_tags" options="{'no_create': True}"  />
                    </page>   
                   
                    <page string="Ажилтан" attrs="{'invisible':[('type','!=','employee')]}" >
                            <field name="employee_ids" widget="many2many_tags" options="{'no_create': True}"  />
                    </page>                    
                </notebook>
                 <footer>
                    <button name="action_export" class ="oe_highlight" string="Татах" type="object" icon="terp-graph"/>
                    or
                    <button string="Цуцлах" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>



    <record model="ir.actions.act_window" id="action_performance_work_report">
            <field name="name">Tайлан</field>
            <field name="res_model">performance.work.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="form_performance_work_report_view"/>
            <field name="target">new</field>
    </record>

    <menuitem name="Гүйцэтгэсэн ажлын тайлан " id="menu_performance_work_report_id"  parent="menu_nomin_request_report"
            action="action_performance_work_report" sequence="13" />

</data>
</odoo>
