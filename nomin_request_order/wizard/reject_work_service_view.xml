<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Цуцлах -->
        <record id="to_reject_work_service_form" model="ir.ui.view">
            <field name="name">reject.work.service</field>
            <field name="model">reject.work.service</field>
            <field name="arch" type="xml">
                <form string="Reject work service">
                    <group>
                        <group>
                            <field name="reason" required="1"/>
                        </group>
                    </group>

                    <footer>
                        <button name="action_reject" string="Reject" type="object" />
                    or
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

