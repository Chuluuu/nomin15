<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="request_cost_sharing_form_view" model="ir.ui.view">
            <field name="name">request.cost.sharing</field>
            <field name="model">request.cost.sharing</field>
            <field name="arch" type="xml">
                <form string="Зардал хувиарлалт">
                    <group>
                        <group>
                            <field name="sector_id" readonly="1" required="1" />
                            <field name="date" required="1"/>
                            <field name="desc" required="1" />
                            <field name="currency_id" required="1" options="{'no_quick_create': True, 'no_create_edit' : True,'no_create':True}" />
                            <field name="is_tax" required="1" readonly="1"/>
                        </group>
                        <group>
                            <field name="paid_due_date" required="1"/>
                            <field name="journal_id" options="{'no_quick_create': True, 'no_create_edit' : True,'no_create':True}" required="1" />
                            <field name="credit_account_id" options="{'no_quick_create': True, 'no_create_edit' : True,'no_create':True}" required="1" />
                            <field name="debit_account_id" options="{'no_quick_create': True, 'no_create_edit' : True,'no_create':True}" required="1" />
                            <field name="vat_account_id" options="{'no_quick_create': True, 'no_create_edit' : True,'no_create':True}" required="1" />
                            <field name="tax_id" required="1" options="{'no_quick_create': True, 'no_create_edit' : True,'no_create':True}" attrs="{'invisible':[('is_tax','=',False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Мөрүүд">
                            <field name="line_ids" editable="bottom" create="false" delete="false">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="department_id" attrs="{'readonly':[('is_true','=',True)]}" options="{'no_create': True}"/>
                                    <field name="desc" required="1" />
                                    <!-- <field name="amount_untaxed" sum="Sum" attrs="{'readonly':[('is_true','=',True)]}"/> -->
                                    <!-- <field name="amount_tax" sum="Sum" attrs="{'readonly':[('is_true','=',True)]}" /> -->
                                    <field name="amount_total" sum="Sum" attrs="{'readonly':[('is_true','=',True)]}"/>
                                    <field name="is_true" invisible="1"/>
                                </tree>
                                <form create="false">
                                    <field name="is_true" invisible="1"/>
                                    <field name="department_id" attrs="{'readonly':[('is_true','=',True)]}"/>
                                    <!-- <field name="amount_untaxed" sum="Sum" attrs="{'readonly':[('is_true','=',True)]}"/> -->
                                    <!-- <field name="amount_tax" sum="Sum" attrs="{'readonly':[('is_true','=',True)]}"/> -->
                                    <field name="amount_total" sum="Sum" attrs="{'readonly':[('is_true','=',True)]}"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_create" type="object" string="Зардал хувиарлалт үүсгэх" class="btn-primary"/>
                    or
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_multi_request_cost_sharing" model="ir.actions.act_window">
            <field name="name">Гүйцэтгэгч салбар зардал хувиарлах</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">request.cost.sharing</field>
            <field name="view_mode">form</field>
            <field name="binding_model_id" ref="nomin_request_order.model_request_order"/>
            <field name="groups_id" eval="[(4, ref('account.group_account_user')),(4, ref('account.group_account_manager'))]"/>
            <field name="target">new</field>
        </record>
        <!-- <act_window name="Гүйцэтгэгч салбар зардал хувиарлах" res_model="request.cost.sharing" src_model="request.order" groups="account.group_account_user,account.group_account_manager" view_mode="form" target="new" multi="True" key2="client_action_multi" id="action_multi_request_cost_sharing"/> -->
    </data>
</odoo>

