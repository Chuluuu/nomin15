<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">


		<record id="group_request_order_rule_employee_id" model="ir.rule">
			<field name="name">Request order -  Employee</field>
			<field ref="nomin_request_order.model_request_order" name="model_id"/>
			<field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
			<field name="groups" eval="[(4, ref('base.group_user'))]"/>
		</record>

		<record id="group_nomin_request_order_rule_followers_id" model="ir.rule">
			<field name="name">Followers see their followed order page</field>
			<field ref="nomin_request_order.model_request_order" name="model_id"/>
			<field name="domain_force">[('message_partner_ids','in',[user.partner_id.id])]</field>
			<field name="groups" eval="[(4, ref('base.group_user'))]"/>
		</record>


		<record id="group_nomin_request_order_rule_see_sectors_id" model="ir.rule">
			<field name="name">Зөвшөөрөгдсөн салбараар  харах</field>
			<field ref="nomin_request_order.model_request_order" name="model_id"/>
			<field name="domain_force">[('sector_id','in',user.project_allowed_departments.ids)]</field>
			<field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
		</record>

		<record id="group_nomin_budget_partner_comparison_rule_see_departments_id" model="ir.rule">
			<field name="name">Зөвшөөрөгдсөн хэлтсээр  харах</field>
			<field ref="nomin_project.model_budget_partner_comparison" name="model_id"/>
			<field name="domain_force">[('department_id','in',user.project_allowed_departments.ids)]</field>
			<field name="groups" eval="[(4, ref('project.group_project_manager'))]"/>
		</record>

		<record id="group_nomin_request_order_rule_see_departments_id" model="ir.rule">
			<field name="name">Зөвшөөрөгдсөн хэлтсээр  харах</field>
			<field ref="nomin_request_order.model_request_order" name="model_id"/>
			<field name="domain_force">[('department_id','in',user.project_allowed_departments.ids)]</field>
			<field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
		</record>

		<record id="group_nomin_request_order_rule_see_perfomr_department_id" model="ir.rule">
			<field name="name">Зөвшөөрөгдсөн хэлтсээр  харах</field>
			<field ref="nomin_request_order.model_request_order" name="model_id"/>
			<field name="domain_force">[('perform_department_id','in',user.project_allowed_departments.ids)]</field>
			<field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
		</record>


		<record id="group_nomin_request_order_rule_see_all_id" model="ir.rule">
			<field name="name">Бүх захиалга харах</field>
			<field ref="nomin_request_order.model_request_order" name="model_id"/>
			<field name="domain_force">[(1,'=',1)]</field>
			<field name="groups" eval="[(4, ref('nomin_project.group_project_admin'))]"/>
		</record>

		<record id="group_nomin_request_order_rule_see_sectors_accountant_id" model="ir.rule">
			<field name="name">Зөвшөөрөгдсөн салбараар  харах-Ахлах нягтлан</field>
			<field ref="nomin_request_order.model_request_order" name="model_id"/>
			<field name="domain_force">[('sector_id','child of',user.hr_allowed_departments.ids)]</field>
			<field name="groups" eval="[(4, ref('nomin_base.group_financial_account_user')),]"/>
		</record>


		<record id="request_order_line_followers" model="ir.rule">
			<field name="name">Followers see their followed order page</field>
			<field ref="nomin_request_order.model_request_order_line" name="model_id"/>
			<field name="domain_force">[('message_partner_ids','in',[user.partner_id.id])]</field>
			<field name="groups" eval="[(4, ref('base.group_user'))]"/>
		</record>


		<record id="group_request_order_line_perform_employee" model="ir.rule">
			<field name="name">Request order line - Perform Employee</field>
			<field ref="nomin_request_order.model_request_order_line" name="model_id"/>
			<field name="domain_force">[('perform_employee_id.user_id','=',user.id)]</field>
			<field name="groups" eval="[(4, ref('base.group_user'))]"/>
		</record>




	</data>

</odoo>
    