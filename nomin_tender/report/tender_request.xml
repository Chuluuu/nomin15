<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="tender_request_report">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.layout">
                    <div class="page l10n_mn_base_report">
                        <table width="100%">
                            <tr>
                                <td align="center" colspan="2" style="vertical-align:top;">
                                    <b>
                                        <ul>
                                            <span t-esc="document_name"/>
                                        </ul>
                                    </b>
                                    <br/>
                                </td>
                            </tr>
                        </table>
                        <table width="100%">
                            <tr>
                                <td width="80%">
                                    <table width="100%">
                                        <tr>
                                            <td>Огноо :                                                <span t-esc="confirmed_date"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                        <table class="table table-l10n_mn-grid" style="width:100%;border: 1px solid #000000;">
                            <tr style="border: 1px solid #000000;" align="center">
                                <th style="border: 1px solid #000000;" width="5%"></th>
                                <th style="border: 1px solid #000000;" width="95%">Ерөнхий зүйл</th>
                            </tr>
                            <tbody style="border: 1px solid #000000;" t-foreach="lines" t-as="l">
                                <tr style="border: 1px solid #000000;">
                                    <td style="text-align: center; border: 1px solid #000000;">
                                        <b t-esc="l['index']"/>
                                    </td>
                                    <td style="text-align: left; border: 1px solid #000000;">
                                        <span t-raw="l['value']"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <p></p>
                        <p></p>
                        <table style="padding-top: 0px;">
                            <tr>
                                <td align="left" width="18%">
                                    <b>Гарын үсэг:</b>
                                </td>
                                <td align="left" width="82%"></td>
                            </tr>
                            <t t-foreach="employees" t-as="e">
                                <tr>
                                    <td align="left" width="18%"></td>
                                    <td align="left" width="82%">
                                        <span t-field="e.job_id.name"/>
                                        <span>: </span>
                                        <span t-field="e.name"/>
                                        <span> / </span>
                                        <img class="image" t-att-src="'data:image/png;base64,%s' %e.signature_image" style="height:70px;width:125px;"/>
                                        <span> / </span>
                                    </td>
                                </tr>
                            </t>
                            <tr>
                                <td align="left" width="18%">
                                    <b>Хүлээн авсан:</b>
                                </td>
                                <td align="left" width="82%"></td>
                            </tr>
                            <tr>
                                <td align="left" width="18%"></td>
                                <td align="left" width="82%">
                                    <span>Тендерийн хорооны дарга: </span>
                                    <img class="image" t-att-src="'data:image/png;base64,%s' %tender_ceo.signature_image" style="height:70px;width:125px;"/>
                                    <span> / </span>
                                    <span t-field="tender_ceo.name"/>
                                    <span> / </span>
                                </td>
                            </tr>
                            <tr>
                                <td align="left" width="18%"></td>
                                <td align="left" width="82%">
                                    <span>Тендерийн хорооны нарийн бичиг: </span>
                                    <img class="image" t-att-src="'data:image/png;base64,%s' %tender_secretary.signature_image" style="height:70px;width:125px;"/>
                                    <span> / </span>
                                    <span t-field="tender_secretary.name"/>
                                    <span> / </span>
                                </td>
                            </tr>
                        </table>

