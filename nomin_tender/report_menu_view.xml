		<record id="action_tender_request_print" model="ir.actions.report">
			<field name="name">Тендер зарлах хүсэлт</field>
			<field name="model">tender.tender</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">nomin_tender.tender_request_report</field>
			<field name="report_file">nomin_tender.tender_request_report</field>
