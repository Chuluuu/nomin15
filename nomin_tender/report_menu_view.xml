		<record id="action_tender_protocol_print" model="ir.actions.report">
			<field name="name">Invoices</field>
			<field name="model">tender.protocol</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">Print protocol</field>
			<field name="report_file">nomin_tender.tender_protocol_report</field>
			<field name="print_report_name">Print protocol</field>
			<field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
			<field name="binding_model_id" ref="model_tender_protocol"/>
			<field name="binding_type">report</field>
			<!-- <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),
 (4, ref('account.group_account_readonly'))]"/> -->
		</record>

		<record id="paperformat_tender_tender_protocol" model="report.paperformat">
			<field name="name">Тендер: Протокол</field>
			<field name="default" eval="True"/>
			<field name="orientation">Portrait</field>
			<field name="margin_top">15</field>
			<field name="margin_bottom">15</field>
			<field name="margin_left">20</field>
			<field name="margin_right">15</field>
			<field name="header_line" eval="False"/>
			<field name="header_spacing">35</field>
			<field name="dpi">90</field>
		</record>

		<record id="nomin_tender.action_tender_protocol_print" model="ir.actions.report">
			<field name="paperformat_id" ref="nomin_tender.paperformat_tender_tender_protocol" />
		</record>

