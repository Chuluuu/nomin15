<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_order_comparison_create_wizard" model="ir.ui.view">
            <field name="name">Purchase Order Comparison Creation Wizard</field>
            <field name="model">purchase.order.comparison.wizard</field>
            <field name="arch" type="xml">
                <form string="Purchase Order Comparison Creation Wizard">
                    <group>
                        <separator string="Are you sure you want to create comparison?"/>
                    </group>
                    <footer>
                        <button name="create_comparison" string="Create Purchase Order Comparison" type="object" class="oe_highlight"/>
                            or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_purchase_order_comparison_wizard" model="ir.actions.act_window">
            <field name="name">Харуьцуулалт үүсгэх</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.comparison.wizard</field>
            <field name="view_mode">form</field>
            <field name="binding_model_id" ref="model_purchase_order"/>
            <!-- <field name="groups_id" eval="[(4, ref('account.group_account_user')),(4, ref('account.group_account_manager'))]"/> -->
            <field name="target">new</field>
        </record>
        <!-- <act_window name="Purchase Order Comparison Creation Wizard" context="{}" res_model="purchase.order.comparison.wizard" src_model="purchase.order" view_mode="form" target="new" multi="True" key2="client_action_multi" id="action_purchase_order_comparison_wizard"/> -->

    </data>
</odoo>
