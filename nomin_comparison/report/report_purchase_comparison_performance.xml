<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_purchase_requistion_performance_view" model="ir.ui.view">
            <field name="name">Худалдан авалтын харьцуулалтын гүйцэтгэлийн тайлан</field>
            <field name="model">purchase.comparison.performance</field>
            <field name="arch" type="xml">
                <form string="Худалдан авалтын гүйцэтгэлийн тайлан">
                    <group>
                        <group>
                            <field name="start_date" required="1"/>
                        </group>
                        <group>

                            <field name="end_date" required="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Ажилчид">
                            <field name="user_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </page>
                        <page string="Хэлтэс">
                            <field name="department_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </page>
                    </notebook>

                    <footer>
                        <button name="export_chart" class ="oe_highlight" string="Export" type="object" icon="terp-graph"/>
                            or
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_purchase_comparison_performance_wizard">
            <field name="name">Худалдан авалтын харьцуулалтын гүйцэтгэлийн тайлан</field>
            <field name="res_model">purchase.comparison.performance</field>
            <field name="view_mode">form</field>
            <!-- <field name="view_id" ref="form_purchase_order_supplier_report_wizard_view"/> -->
            <field name="target">new</field>
        </record>

        <!-- TODO FIX LATER -->
