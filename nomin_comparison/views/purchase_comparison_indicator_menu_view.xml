<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="purchase_evaluation_indicators_form" model="ir.ui.view">
            <field name="name">evaluation.indicators.form</field>
            <field name="model">evaluation.indicators</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Evaluation Indicators">
                    <sheet>
                            <group col="4">
                                <field name="name"/>
                                <field name="category" invisible="1"/>
                            </group>
                            <group>
                                <field name="line_ids">
                                    <tree string="line_ids" editable="bottom">
                                        <field name="model_id"/>
                                        <field name="is_default"/>
                                        <field name="evalution_method"/>
                                        <field name="scale"/>
                                        <field name="indicator_id" invisible="1"/>
                                    </tree>
                                    <form string="line_ids">
                                        <group>
                                            <field name="model_id"/>
                                            <field name="is_default"/>
                                            <field name="evalution_method"/>
                                            <field name="scale"/>
                                            <field name="indicator_id" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="purchase_evaluation_indicators_tree" model="ir.ui.view">
            <field name="name">evaluation.indicators.tree</field>
            <field name="model">evaluation.indicators</field>
            <field name="arch" type="xml">
                <tree string="Evaluation Indicators">
                    <field name="name"/>
                    <field name="category" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="purchase_evaluation_indicators_filter" model="ir.ui.view">
            <field name="name">Evaluation Indicators Search</field>
            <field name="model">evaluation.indicators</field>
            <field name="arch" type="xml">
                <search string="Evaluation Indicators">
                    <field name="name" string="Name"/>
                    <field name="category" invisible="1" string="Category"/>
                </search>
             </field>
        </record>

    <record id="purchase_evaluation_indicators_action" model="ir.actions.act_window">
        <field name="name">Evaluation Indicatorss</field>
        <field name="res_model">evaluation.indicators</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="purchase_evaluation_indicators_tree"/>
    </record>

    <menuitem action="purchase_evaluation_indicators_action" 
        id="menu_purchase_indicators"
      groups="nomin_purchase_requisition.group_haaa_director"
        parent="purchase.menu_purchase_config"/>
            
            
	</data>
</openerp>