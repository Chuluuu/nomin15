	<template id="search_all_form" name="Search All Form">
		<form class="form_search" id="search_all_form" role="search" t-attf-action="/allresults" method="get">
			<div class="input-group">
				<input type="search" name="search" class="form-control" placeholder="вэбсайтаас хайх ..." t-att-value="search or ''"/>
				<span class="input-group-btn">
					<button class="btn btn-default hidden-xs hidden-sm" type="submit">
						<img src="/nomin_web/static/img/glyphicon-search.png" class="glyphicon-search"/>
					</button>
					<button class="btn btn-primary visible-xs visible-sm" type="submit" style="padding-top: 12px;">
						<span class="fa fa-search msearch-btn"></span>
					</button>
				</span>
			</div>
		</form>
	</template>

