		</t>
		<script type="text/javascript">
			<![CDATA[
			// *------- hailtiin ur dungiin haragdats neg formatand oruulah -------*
		    (function strip() {
				$(".invitation_details").each(function(){
		    	    var $this = $(this);
		    	    var t = $this.text();
		    	    $this.html(t.replace('&lt','<').replace('&gt', '>'));
				});
				$(".invitation_details").each(function(){
		    	    var $this = $(this);
		    	    var t = $this.text();
		    	    $this.html(t.replace(/<\/?[^>]+(>|$)/g, "") + "...");
				});
			})();
		]]>
		</script>
	</template>

