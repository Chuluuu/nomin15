<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
            <!-- Зарлагдсан тендерүүд -->
        <template id="nomin_web.tenderlist" name="Зарлагдсан тендерүүд">
            <div class="row">
                <div class="col-sm-9 col-md-9">
                    <h4>Шүүлтийн төрөл</h4>
                    
                    <t t-call="nomin_web.search_form"/>
                    <hr/><h3 class="pagetitle">Зарлагдсан тендерүүд</h3>
                    
                    <t t-foreach="tenders" t-as="tender">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-condensed">
                                <thead>
                                    <tr>
                                        <td colspan="4" >
                                        <!-- <t t-if="website.user_id == user_id"><t t-esc="tender.desc_name"></t></t>
                                        <t t-if="website.user_id != user_id"></t> -->
                                        <a t-attf-href="/tender_detail/#{ slug(tender) }/" class="tender-title"><t t-esc="tender.desc_name"></t></a>
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Захиалагч</td>
                                        <td>Дугаар</td>
                                        <td>Нийтэлсэн</td>
                                        <td>Эцсийн хугацаа</td>
                                    </tr>
                                    <tr>
                                        <td class="colored-text"><t t-esc="tender.company_id.name"></t></td>
                                        <td class="text-info"><t t-esc="tender.name"/></td>
                                        <td class="text-info"><span class="user-date" t-esc="tender.published_date"/></td>
                                        <td class="text-danger"><span class="user-date" t-esc="tender.date_end"/></td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="text-align:center">
                                            Төлөв:
                                        </td>
                                        <td colspan="2" class="text-center">
                                            <t t-if="tender.state!='published'">
                                            <span class="label label-danger">Баримт бичиг хүлээн авч дууссан</span><!-- <img src="/nomin_web/static/img/closed.png" width="15px;" /> -->
                                            </t>
                                            <t t-if= "tender.state=='published'">
                                            <span class="label label-success">Баримт бичиг хүлээн авч байна</span><!-- <img src="/nomin_web/static/img/opened.png" width="15px;" /> -->
                                            </t>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                    <div class="products_pager">
                        <t t-call="website.pager"/>
                    </div>
                            
                </div>
                        
                <div class="col-sm-3 col-md-3">
                    <t t-call="nomin_web.tender_selection"/>
                            
                </div>
            </div>
        </template>
    </data>
</odoo>