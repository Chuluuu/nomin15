                                    <div class="form-group form-field o_website_form_required_custom">
                                        <t t-if='partner'><input type="hidden" class="form-control o_website_form_input" name="name" t-att-value="partner.name +' бичиг баримт'"/></t>
                                    </div>
                                    <div class="form-group form-field o_website_form_required_custom">
                                        <t t-if='partner'><input type="hidden" class="form-control o_website_form_input" name="partner_id" t-att-value="partner.id"/></t>
                                    </div>
                                    <div class="form-group form-field o_website_form_required_custom">
                                        <t t-if='partner'><input type="hidden" class="form-control o_website_form_input" name="state" t-att-value="'complete'"/></t>
                                    </div>
                                    

