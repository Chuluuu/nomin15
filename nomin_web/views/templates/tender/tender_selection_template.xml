        <template id="tender_selection">

            <div class="blockItem">
                <h4 class="block-title">Тендер шалгаруулалт                    <span></span>
                </h4>
                <ul class="branch-menu">
                    <li>
                        <a id="a_li_tender_list" href="/tender_list">
                            <span class="fa fa-chevron-right" aria-hidden="true"></span>Тендерийн урилга
                        </a>
                    </li>
                    <li>
                        <a id="a_li_" class="disabled">
                            <span class="fa fa-chevron-right" aria-hidden="true"></span>Тендерийн төрөл
                        </a>
                        <ul class="branch-menu">
                            <t t-foreach="tender_types" t-as="tender_type">
                                <t t-if="not tender_type.parent_id">
                                    <!-- <li><t t-if="not tender_type.parent_id"><a t-attf-href="##{tender_type.id}"><t t-esc="tender_type.name"/></a></t></li> -->
                                    <li>
