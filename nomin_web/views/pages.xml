<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- NOMIN home page -->
	<template id = "nomin_homepage" inherit_id = "website.homepage">
		<xpath expr="//div[@id='wrap']" position="replace">
			<div id="wrap" class="oe_structure oe_empty">
				<div class="container">

				</div>
			</div>
		</xpath>
	</template>

	<!-- Search form -->
	<template id="search_form" name="Search Form">
		<form class="s_website_form" id="search_form" role="search" t-attf-action="/search_results" method="get">
			<div class="form-group row">
				<label class="col-md-4 col-sm-4 text-right" for="date"> Материал хүлээн авах хугацаа:</label>
				<div class="row" style="padding: 0 15px;">
					<div class="col-md-4 col-sm-4 col-xs-6 text-left">
						<input type="date" name="startdate" class="form-control input-sm" placeholder="Хайх утгаа оруулна уу ..." t-att-value="startdate or start_date"/>
						<!-- <span class="input-group-addon">
					                        <span class="icon-calendar"></span>
					                    </span> -->
						<!-- <input type="date" name="startdate" class="form-control input-sm" placeholder="Хайх утгаа оруулна уу ..." t-att-value="search or ''"/>
	                                <span class="input-group-addon">
				                        <span class="icon-calendar"></span>
				                    </span> -->
						<!-- <input type="text" class="form-control input-sm" value="02/16/12" data-date-format="mm/dd/yy" id="dp2"/> -->
					</div>
					<div class="col-md-4 col-sm-4 col-xs-6 text-left">
						<input type="date" name="enddate" class="form-control input-sm" placeholder="Хайх утгаа оруулна уу ..." t-att-value="enddate or end_date"/>
					</div>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-md-4 col-sm-4 text-right" for="category"> Тендер шалгаруулалтын дугаар:</label>
				<div class="col-md-8 col-sm-8 text-left">
					<input type="search" name="category" class="form-control input-sm" placeholder="Хайх утгаа оруулна уу ..." t-att-value="category or ''"/>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-md-4 col-sm-4 text-right" for="tendername"> Тендер шалгаруулалтын нэр:</label>
				<div class="col-md-8 col-sm-8 text-left">
					<input type="search" name="tendername" class="form-control input-sm" placeholder="Хайх утгаа оруулна уу ..." t-att-value="tendername or ''"/>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-md-4 col-sm-4 text-right" for="category_id"> Тендерийн төрөл:</label>
				<div class="col-md-8 col-sm-8 text-left">
					<select name="category_id" class="form-control input-sm" t-att-value="category_id or ''">
						<option value="">.:Сонгох:.</option>
						<t t-foreach="tender_types or []" t-as="type">
							<option t-if="not type.parent_id" t-att-value="type.id" t-att-selected="type.id == category_id">
								<t t-esc="type.name"/>
							</option>
						</t>
					</select>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-md-4 col-sm-4 text-right" for="child_cate_id"> Тендерийн ангилал:</label>
				<div class="col-md-8 col-sm-8 text-left">
					<select name="child_cate_id" class="form-control input-sm" t-att-value="child_cate_id or ''">
						<option value="">.:Сонгох:.</option>
						<t t-foreach="tender_types or []" t-as="cate">
							<option t-if="cate.parent_id" t-att-value="cate.id" t-att-selected="cate.id == child_cate_id">
								<t t-esc="cate.name"/>
							</option>
						</t>
					</select>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-md-4 col-sm-4 text-right" for="status"> Төлөв:</label>
				<div class="col-md-8 col-sm-8 text-left">
					<select name="status" class="form-control input-sm" t-att-value="status or ''">
						<option value="">.:Сонгох:.</option>
						<option value="published" t-att-selected="status == 'published'">Хүлээн авч дуусаагүй</option>
						<option value="closed" t-att-selected="status == 'closed'">Хүлээн авч дууссан</option>
					</select>
					<!-- <input type="search" name="status" class="form-control input-sm" placeholder="Хайх утгаа оруулна уу ..." t-att-value="search or ''"/> -->
				</div>
			</div>
			<div class="form-group text-center">
				<button t-attf-href="/search_results?{{keep_query('sorting', 'search_on_pages', 'case_sensitive', tendername=tendername, search_advanced='0')}}" class="btn btn-primary">Хайх</button>
				<!-- <a class="col-md-offset-1" t-attf-href="/search_results">Дэлгэрэнгүй Хайлт</a> -->
			</div>
		</form>
	</template>

	<!-- Search result -->
	<template id="search_results" name="Search Results">
		<t t-call="website.layout">
			<div id="wrap" class="oe_structure oe_empty">
				<div class="container">

					<div class="content-bg">
						<!-- <span class="label label-info"></span>
				<t t-esc="pager"/>
				<t t-esc="pager['offset']+1"/>
	            <div class="products_pager">
					<t t-call="website.pager"/>
				</div> -->
						<t t-call="nomin_web.tenderlist"/>
					</div>
				</div>
			</div>
		</t>
	</template>

	<template id="nomin_sub_menu_exchange" name="Валютын ханш">
		<div class="blockItem">
			<h4 class="block-title">
                 Валютын ханш				<span></span>
			</h4>
			<div class="table-responsive">
				<iframe src="https://holding.nomin.mn/mn/exchangeWeb" height="190" width="250" style="border:none;"/>
			</div>
		</div>
	</template>



	<template id="nomin_sub_menu_suggestion">
		<div class="blockItem">
			<h4 class="block-title">
                 Зөвлөгөө				<span></span>
			</h4>

			<div class="tabContents">
				<div id="news-latest-single" class="tab-content">
					<t t-foreach="suggestions" t-as="suggestion">
						<ul class="news-list">
							<li>
								<a t-attf-href="/suggestion/#{ slug(suggestion) }">
									<img t-att-src="'data:image/png;base64,%s' %suggestion.suggestion_image" height="100" width="162"/>
									<span class="t">
										<t t-esc="suggestion.name"/>
									</span>
									<span class="d">
										<t t-esc="suggestion.published_date"/>
									</span>
								</a>
							</li>
						</ul>
					</t>
				</div>
				<a class="btn pull-right" t-attf-href="/suggestion/" target="_self">Бусад</a>

			</div>
		</div>
	</template>

	<template id="side_banner">
		<div class="col-lg-12 col-md-12 slider-wrapper">

		</div>
	</template>




	<!-- Зарлагдсан тендерийн жагсаалт -->
	<template id="nomin_web.tender_list" name="Зарлагдсан тендерүүд">
		<t t-call="website.layout">
			<div id="wrap" class="oe_structure oe_empty">
				<div class="container">
					<div class="content-bg">
						<t t-call="nomin_web.tenderlist"/>
					</div>
				</div>
			</div>
		</t>
	</template>



</odoo>