<odoo>
    <data>

        <record model="ir.ui.view" id="nomin_purchase_requisition_asker_form">
            <field name="name">nomin.purchase.requisition.asker.from</field>
            <field name="model">nomin.purchase.requisition.asker</field>
            <field name="arch" type="xml">
                <form string="Write your reason">
                    <group>
                        <field name="reason"/>
                        <field name="description"/>
                    </group>
                    <footer>
                        <button name="button_accept" type="object" string="Accept" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_reason_asker_purchase">
            <field name="name">Write your reason</field>
            <field name="res_model">nomin.purchase.requisition.asker</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="nomin_purchase_requisition_asker_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
